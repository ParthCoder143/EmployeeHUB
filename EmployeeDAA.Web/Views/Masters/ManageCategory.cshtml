@{
    ViewData["Title"] = "Manage Category";
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Manage Category</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form method="post" apiurl="Categories" id="frmDocumentClass" role="form">
    <div class="modal-body">
        <input type="hidden" id="Id" Name="Id" value="0" />
        <div class="form-group">
            <label>Category Name <span class="text-danger">*</span></label>
            <input autofocus type="text" class="form-control firstelement" id="CategoryName" name="CategoryName" title="Enter Category Name" required />
        </div>
        <div class="form-group">
            <label>Sort Order<i class="fas fa-info-circle ml-1" data-toggle="tooltip" data-placement="right" title="Only Number Allow"></i></label>
            <input type="text" class="form-control numberOnly" id="SortOrder" name="SortOrder" />
        </div>
        <div class="d-inline-block align-checklistgrpitems-center justify-content-center">
            <label>Status </label>
            <label class="switch small-switch mb-0">
                <input type="checkbox" id="IsActive" name="IsActive" class="btn-grid-isactive" value="1" checked="checked">
                <span class="switch-slider"></span>
            </label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
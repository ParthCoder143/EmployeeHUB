@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Employee - HUB</title>

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <link rel="stylesheet" href="~/css/all.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/sweetalert2.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <div class="login__header">
        <h1 style="font-size:50px">EmployeeHUB</h1>
        <h1>HUB</h1>
    </div>
    <div class="loader-main hide-block">
        <div id="loading"></div>
    </div>
    <section class="login__wrap">
        <div class="login__box">
            <h3>Sign In</h3>
            <form method="post" apiurl="Login/Authenticate" id="frmLogin" role="form">
                <div class="form-group">
                    <label>Username</label>
                    <input class="form-control" type="text" title="Username required" name="Username" id="Username" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input id="password__field" type="password" class="form-control" name="Password" title="Password required" value="" required>
                    <span toggle="#password__field" class="fa fa-fw field__icon toggle__password fa-eye"></span>
                </div>
                <div class="form-group">
                    <label>Verification Code</label>
                    <div class="form-group recaptcha">
                        <div class="captcha__img">
                            <img id="CaptchaImage" />
                            <span class="captcha__refresh fas fa-sync-alt"></span>
                        </div>
                        <input type="text" class="form-control numberRegEx" id="CaptchaCode" name="CaptchaCode"
                               placeholder="Verification Code *" maxlength="4" autocomplete="off"
                               onpaste="return false" title="Captcha code required" required>
                    </div>
                    <label id="CaptchaCode-error" class="error" for="CaptchaCode"></label>
                    <input type="hidden" id="CaptchaToken" name="CaptchaToken" />
                </div>
                <div class="form-group login__action">
                    <button type="button" id="btnLogin" class="btn btn-primary">Sign In</button>
                </div>
            </form>
        </div>
    </section>
    <!-- Main JS -->
    <script src="~/js/jquery-3.6.0.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
    <!-- Bootstrap JS -->
    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>
    <environment include="Development">
        <script src="~/js/Common/ConfigURL.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/Common/ConfigProd.js" asp-append-version="true"></script>
    </environment>
    <script src="~/js/Common/RequestResponse.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert2.all.js" asp-append-version="true"></script>
    <script src="~/js/Common/Common.js" asp-append-version="true"></script>
    <script src="~/js/pages/Login/Login.js" asp-append-version="true"></script>
</body>
</html>
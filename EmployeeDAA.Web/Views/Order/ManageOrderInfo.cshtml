@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="col-md-7 col-lg-8 mx-auto" style="margin-top:100px">
        <h4 class="mb-3">Personal Details</h4>
        @*        <form method="post" apiurl="Order" id="frmAddEditPopup" role="form" enctype="multipart/form-data">
        *@
        <form method="post" action="https://localhost:7062/api/Order" id="frmAddEditPopup" role="form" enctype="multipart/form-data">

            <div class="modal-body">
                <input type="hidden" id="Id" name="Id" value="0" />
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="CustomerId">Customer Id</label>
                            <input type="text" class="form-control" id="CustomerId" name="CustomerId" title="Enter Customer Id" />
                        </div>

                        <div class="form-group">
                            <label>Customer Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="CustomerName" name="CustomerName" autocomplete="off"
                                   title="Customer Name" required />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Date of Birth</label>
                            <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" />
                        </div>


                        <div class="form-group">
                            <label>Mobile No<span class="text-danger">*</span></label>
                            <input type="text" class="form-control numberOnly" id="MobileNo" name="MobileNo" autocomplete="off" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email Address <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="EmailAddress" name="EmailAddress" autocomplete="off" title="Enter Email." required />
                        </div>
                        <div class="form-group">
                            <label>Unit No</label>
                            <input type="text" class="form-control" id="UnitNo" name="UnitNo" autocomplete="off" />
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Block</label>
                            <input type="text" class="form-control" id="Block" name="Block" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <label>Street</label>
                            <input type="text" class="form-control" id="Street" name="Street" autocomplete="off" />
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Building Name<span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="BuildingName" name="BuildingName" autocomplete="off" required />
                        </div>
                        <div class="form-group">
                            <label>Postal Code</label>
                            <input type="number" class="form-control" id="PostalCode" name="PostalCode" autocomplete="off" />
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </div>
</div>
@section scripts{
    <script src="~/js/pages/Order/Order.js" asp-append-version="true"></script>
}




@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section filters{
    <div class="form-group">
        <label>Department Name</label>
        <input type="text" class="form-control filter-control" colName="DepartmentName" option-type="input" option-op="Contains" maxlength="50">
    </div>
    <div class="form-group">
        <label>Department Code</label>
        <input type="number" class="form-control filter-control" colName="DepartmentCode" option-type="input" option-op="Contains" maxlength="50">
    </div>
}
<partial name="~/Views/Shared/_MasterNavigation.cshtml" />

<div class="middle__bar middle__bar--has-tab">
    <partial name="~/Views/Shared/_ManageTopDataFilter.cshtml" />

    <table id="tblDepartment" class="table table-bordered table-striped checkbox__on--hover tasks w-100" role="presentation">
    </table>
</div>
<div class="modal fade" tabindex="-1" id="popmodel" role="dialog" aria-labelledby="myLargeModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content" id="popmodelcontent">
        </div>
    </div>
</div>
@section scripts{

    <script src="~/js/pages/Department/department.js" asp-append-version="true"></script>
}
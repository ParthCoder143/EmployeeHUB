@{
    ViewData["Title"] = "Manage Role";
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">@ViewData["Title"]</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form method="post" apiurl="Role" id="frmAddEditPopup" role="form">
    <div class="modal-body">
        <input type="hidden" id="Id" Name="Id" value="0" />
        <div class="form-group">
            <label>Role <span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="Name" name="Name" required />
        </div>
        <div class="form-group">
            <label>User Type</label>
            <select id="RoleType" name="RoleType" mode="RoleType" colName="RoleType" title="Select RoleType" class="selectpicker w-100" data-live-search="true">
            </select>
        </div>
        <input type="hidden" id="RoleId" Name="RoleId" value="0" />
        <div class="form-group d-none">
            <label>Status</label>
            <label class="switch small-switch mb-0 ml-2">
                <input type="checkbox" id="IsActive" name="IsActive" value="1" checked="checked"><span class="switch-slider"></span>
            </label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>